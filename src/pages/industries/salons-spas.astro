---
import Layout from '../../layouts/Layout.astro';
import FAQSection from '../../components/FAQSection.astro';
import { demoIndustryMap } from '../../data/demo-industries';

const demoSlug = 'salons-spas';
const demoData = demoIndustryMap[demoSlug];

const industry = {
  name: "Salons & Spas",
  icon: "ðŸ’…",
  headline: "Keep Your Chairs Full with Loyal Clients",
  description: "Build a strong brand, streamline bookings, and turn one-time visitors into regulars.",
  stats: [
    { value: "150%", label: "Booking increase" },
    { value: "40%", label: "Fewer no-shows" },
    { value: "4.9â˜…", label: "Avg. Google rating" }
  ],
  challenges: [
    "High competition from other salons and spas in your area",
    "No-shows and last-minute cancellations costing you money",
    "Building a consistent client base that returns regularly",
    "Showcasing your work effectively online to attract new clients"
  ],
  solutions: [
    "Beautiful portfolio website showcasing your work",
    "Online booking with deposit requirements",
    "Automated reminders to reduce no-shows",
    "Loyalty program and referral automation",
    "Instagram and social media integration",
    "Review request automation"
  ],
  features: [
    { title: "Portfolio Gallery", desc: "Showcase your best work with a stunning, mobile-optimized gallery" },
    { title: "Online Booking", desc: "Let clients book 24/7 with optional deposits to reduce no-shows" },
    { title: "SMS Reminders", desc: "Automated text reminders that cut no-shows by 40%" },
    { title: "Loyalty Program", desc: "Reward returning clients and encourage referrals automatically" }
  ],
  testimonial: {
    quote: "Bookings increased 150% and no-shows dropped dramatically with the reminder system. Our online portfolio brings in new clients every week who've seen our work on Instagram.",
    author: "Jasmine Lee",
    title: "Owner, Glow Beauty Studio",
    location: "Vancouver, BC",
    image: "https://images.unsplash.com/photo-1594744803329-e58b31de8bf5?w=100&h=100&fit=crop&crop=face"
  }
};

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Salon and Spa Web Design and Marketing",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Lead Flow North"
  },
  "areaServed": ["Ontario", "Alberta"],
  "description": "Web design and client acquisition services for hair salons, nail salons, spas, and beauty businesses in Canada."
};
---

<Layout 
  title={`${industry.name} Web Design & Lead Generation`}
  description={`${industry.description} Web design and marketing automation for hair salons, nail salons, spas, and beauty businesses in Ontario and Alberta.`}
  structuredData={schema}
>
  <!-- Hero -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 dark:bg-primary-900/30 rounded-full mb-6">
            <span class="text-2xl">{industry.icon}</span>
            <span class="text-sm font-medium text-primary-700 dark:text-primary-300">{industry.name}</span>
          </div>
          <h1 class="text-4xl sm:text-5xl font-extrabold text-slate-900 dark:text-white mb-6">
            {industry.headline}
          </h1>
          <p class="text-lg text-slate-600 dark:text-slate-300 mb-8">
            {industry.description} We help salons and spas across Ontario and Alberta build beautiful brands and loyal clientele.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 items-center">
            <a href="https://cal.com/leadflownorth/15min" class="inline-flex items-center justify-center px-6 py-3 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-colors duration-200">
              Book Your Free Discovery Call
            </a>
            <a href="/free-audit" class="text-slate-600 dark:text-slate-400 hover:text-primary-600 dark:hover:text-primary-400 font-medium transition-colors underline">Get Free Audit</a>
            <span class="text-slate-400">|</span>
            <a href="/services" class="text-slate-600 dark:text-slate-400 hover:text-primary-600 dark:hover:text-primary-400 font-medium transition-colors underline">View Pricing</a>
          </div>
        </div>
        <div class="grid grid-cols-3 gap-4">
          {industry.stats.map((stat) => (
            <div class="bg-white dark:bg-slate-800 rounded-2xl p-6 text-center shadow-lg">
              <p class="text-3xl font-extrabold text-primary-600 mb-1">{stat.value}</p>
              <p class="text-sm text-slate-500 dark:text-slate-400">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Challenges -->
  <section class="py-16 lg:py-24 bg-white dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="reveal">
          <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-6">
            We Understand Your Challenges
          </h2>
          <p class="text-lg text-slate-600 dark:text-slate-300 mb-8">
            The beauty industry is visual, personal, and competitive. You need a website that showcases your talent and makes booking effortless.
          </p>
          <ul class="space-y-4">
            {industry.challenges.map((challenge) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span class="text-slate-700 dark:text-slate-300">{challenge}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="reveal">
          <img 
            src="https://images.unsplash.com/photo-1560066984-138dadb4c035?w=600&h=400&fit=crop&fm=webp&q=80" 
            alt="Modern salon interior"
            class="rounded-2xl shadow-xl w-full"
            loading="lazy"
            decoding="async"
            width="600"
            height="400"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Solutions -->
  <section class="py-16 lg:py-24 bg-slate-50 dark:bg-slate-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 reveal">
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4">
          Our Salon & Spa Marketing Solutions
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
          Everything you need to showcase your talent, fill your calendar, and build a loyal client base.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6 mb-12">
        {industry.features.map((feature) => (
          <div class="reveal bg-white dark:bg-slate-900 rounded-2xl p-6 border border-slate-200 dark:border-slate-700">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">{feature.title}</h3>
            <p class="text-slate-600 dark:text-slate-400">{feature.desc}</p>
          </div>
        ))}
      </div>
      
      <div class="reveal bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl p-8 text-white">
        <h3 class="text-2xl font-bold mb-6 text-center">What's Included</h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {industry.solutions.map((solution) => (
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-accent-300 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>{solution}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="py-16 lg:py-24 bg-white dark:bg-slate-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="reveal bg-slate-50 dark:bg-slate-800 rounded-2xl p-8 lg:p-12 text-center">
        <img 
          src={industry.testimonial.image} 
          alt={industry.testimonial.author}
          class="w-20 h-20 rounded-full mx-auto mb-6 object-cover"
          loading="lazy"
          decoding="async"
          width="80"
          height="80"
        />
        <blockquote class="text-xl lg:text-2xl text-slate-700 dark:text-slate-300 mb-6 italic">
          "{industry.testimonial.quote}"
        </blockquote>
        <div>
          <p class="font-bold text-slate-900 dark:text-white">{industry.testimonial.author}</p>
          <p class="text-slate-500 dark:text-slate-400">{industry.testimonial.title}</p>
          <p class="text-sm text-slate-400">{industry.testimonial.location}</p>
        </div>
      </div>
    </div>
  </section>


  <!-- FAQ Section -->
  <FAQSection faqs={demoData.faqs} heading={`${industry.name}. Frequently Asked Questions`} />

  <!-- See Your Website Demo CTA -->
  <section class="py-16 lg:py-24 bg-slate-50 dark:bg-slate-800/50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="reveal">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-accent-100 dark:bg-accent-900/30 rounded-full mb-6">
          <span class="text-sm font-medium text-accent-700 dark:text-accent-300">Interactive Demo</span>
        </div>
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4">
          See What Your Website Could Look Like
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-300 mb-8 max-w-2xl mx-auto">
          Enter your business name, phone number, colors, and services , and watch a personalized website preview come to life in seconds.
        </p>
        <a href={`/demos/${demoSlug}`} class="inline-flex items-center px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-bold text-lg rounded-xl transition-colors duration-200 shadow-lg">
          Build Your Free Demo
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
        </a>
        <p class="mt-4 text-sm text-slate-500 dark:text-slate-400">100% free. No signup required. Takes 30 seconds</p>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-primary-600 to-primary-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Ready to Grow Your Salon?
      </h2>
      <p class="text-lg text-primary-100 mb-8">
        Book a free strategy call and we'll show you exactly how we can help you attract more clients and reduce no-shows.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="https://cal.com/leadflownorth/15min" class="inline-flex items-center px-8 py-4 bg-white text-primary-700 font-bold text-lg rounded-xl hover:bg-primary-50 transition-colors duration-200 shadow-xl">
          Book Your Free Discovery Call
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href="/free-audit" class="text-white hover:text-primary-100 font-medium transition-colors underline">Get Free Audit</a>
        <span class="text-white/50">|</span>
        <a href="/services" class="text-white hover:text-primary-100 font-medium transition-colors underline">View Pricing</a>
      </div>
