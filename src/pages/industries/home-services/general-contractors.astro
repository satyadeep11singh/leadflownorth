<Layout title="General Contractor Marketing Automation | Lead Flow North">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-slate-900 via-stone-800 to-slate-900 text-white py-20 md:py-32 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><circle cx=%2250%22 cy=%2250%22 r=%221%22 fill=%22white%22/></svg>'); background-size: 50px 50px;"></div>
    </div>
    <div class="container mx-auto px-4 sm:px-6 relative z-10">
      <div class="max-w-4xl">
        <a href="/industries" class="inline-flex items-center text-stone-300 hover:text-stone-200 mb-6 transition">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          All Industries
        </a>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          Marketing Automation for
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-stone-400 to-amber-400">General Contractors</span>
        </h1>
        <p class="text-xl md:text-2xl text-slate-300 mb-8 leading-relaxed">
          Win more bids, communicate better during projects, and turn completed jobs into your best marketing.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="https://cal.com/leadflownorth/15min" target="_blank" rel="noopener" class="inline-flex items-center justify-center bg-gradient-to-r from-stone-500 to-amber-500 text-white px-8 py-4 rounded-lg font-semibold hover:from-stone-600 hover:to-amber-600 transition shadow-lg shadow-stone-500/30">
            Book Your Free Discovery Call
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href="/services" class="inline-flex items-center justify-center border-2 border-slate-500 text-white px-8 py-4 rounded-lg font-semibold hover:bg-slate-800 transition"><svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>ROI Calculator</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-white border-b">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-stone-600 mb-2">43%</div>
          <div class="text-slate-600">Bid win rate</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-stone-600 mb-2">67%</div>
          <div class="text-slate-600">Client satisfaction</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-stone-600 mb-2">4.1x</div>
          <div class="text-slate-600">Referral increase</div>
