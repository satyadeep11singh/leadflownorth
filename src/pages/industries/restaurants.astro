---
import Layout from '../../layouts/Layout.astro';

const industry = {
  name: "Restaurants",
  icon: "üçΩÔ∏è",
  headline: "Keep Your Tables Full and Orders Flowing",
  description: "Drive more reservations, online orders, and repeat visits with restaurant-focused marketing.",
  stats: [
    { value: "245%", label: "Online order increase" },
    { value: "18%", label: "Repeat customer boost" },
    { value: "2.4K", label: "Loyalty members" }
  ],
  challenges: [
    "Relying too heavily on third-party delivery apps that take 30% fees",
    "Building a loyal customer base that returns regularly",
    "Managing reservations efficiently across multiple platforms",
    "Standing out in a saturated market"
  ],
  solutions: [
    "Direct online ordering without third-party fees",
    "Loyalty program to drive repeat visits",
    "Reservation system with automated confirmations",
    "Email marketing for specials and events",
    "Menu management and updates",
    "Google My Business optimization"
  ],
  features: [
    { title: "Direct Online Ordering", desc: "Keep 100% of your revenue with your own ordering system" },
    { title: "Digital Loyalty Program", desc: "Reward regulars and encourage repeat visits" },
    { title: "Table Reservations", desc: "Easy booking with automated SMS confirmations" },
    { title: "Menu Management", desc: "Update prices and items instantly across all platforms" }
  ],
  testimonial: {
    quote: "The online ordering system paid for itself in the first month. We're keeping thousands that used to go to delivery apps. Our regulars love the loyalty program.",
    author: "Maria Santos",
    title: "Operations Manager, Urban Eats Restaurant Group",
    location: "Toronto, ON",
    image: "https://images.unsplash.com/photo-1580489944761-15a19d654956?w=100&h=100&fit=crop&crop=face"
  }
};

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Restaurant Web Design and Marketing",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Lead Flow North"
  },
  "areaServed": ["Ontario", "Alberta"],
  "description": "Web design, online ordering, and marketing services for restaurants and food service businesses in Canada."
};
---

<Layout 
  title={`${industry.name} Web Design & Lead Generation`}
  description={`${industry.description} Web design and marketing automation for restaurants, cafes, and food service businesses in Ontario and Alberta.`}
  structuredData={schema}
>
  <!-- Hero -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 dark:bg-primary-900/30 rounded-full mb-6">
            <span class="text-2xl">{industry.icon}</span>
            <span class="text-sm font-medium text-primary-700 dark:text-primary-300">{industry.name}</span>
          </div>
          <h1 class="text-4xl sm:text-5xl font-extrabold text-slate-900 dark:text-white mb-6">
            {industry.headline}
          </h1>
          <p class="text-lg text-slate-600 dark:text-slate-300 mb-8">
            {industry.description} We help restaurants across Ontario and Alberta build direct relationships with customers.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-colors duration-200">
              Get Your Free Strategy Call
            </a>
            <a href="/case-studies" class="inline-flex items-center justify-center px-6 py-3 border-2 border-slate-300 dark:border-slate-600 hover:border-primary-500 text-slate-700 dark:text-slate-300 font-semibold rounded-xl transition-colors duration-200">
              See Case Studies
            </a>
          </div>
        </div>
        <div class="grid grid-cols-3 gap-4">
          {industry.stats.map((stat) => (
            <div class="bg-white dark:bg-slate-800 rounded-2xl p-6 text-center shadow-lg">
              <p class="text-3xl font-extrabold text-primary-600 mb-1">{stat.value}</p>
              <p class="text-sm text-slate-500 dark:text-slate-400">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Challenges -->
  <section class="py-16 lg:py-24 bg-white dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="reveal">
          <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-6">
            We Understand Your Challenges
          </h2>
          <p class="text-lg text-slate-600 dark:text-slate-300 mb-8">
            Margins in the restaurant business are tight. Third-party apps eat into profits, and building loyal customers is harder than ever.
          </p>
          <ul class="space-y-4">
            {industry.challenges.map((challenge) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span class="text-slate-700 dark:text-slate-300">{challenge}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="reveal">
          <img 
            src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=600&h=400&fit=crop&fm=webp&q=80" 
            alt="Restaurant interior"
            class="rounded-2xl shadow-xl w-full"
            loading="lazy"
            decoding="async"
            width="600"
            height="400"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Solutions -->
  <section class="py-16 lg:py-24 bg-slate-50 dark:bg-slate-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 reveal">
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4">
          Our Restaurant Marketing Solutions
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
          Everything you need to fill tables, increase online orders, and build a loyal customer base.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6 mb-12">
        {industry.features.map((feature) => (
          <div class="reveal bg-white dark:bg-slate-900 rounded-2xl p-6 border border-slate-200 dark:border-slate-700">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">{feature.title}</h3>
            <p class="text-slate-600 dark:text-slate-400">{feature.desc}</p>
          </div>
        ))}
      </div>
      
      <div class="reveal bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl p-8 text-white">
        <h3 class="text-2xl font-bold mb-6 text-center">What's Included</h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {industry.solutions.map((solution) => (
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-accent-300 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>{solution}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="py-16 lg:py-24 bg-white dark:bg-slate-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="reveal bg-slate-50 dark:bg-slate-800 rounded-2xl p-8 lg:p-12 text-center">
        <img 
          src={industry.testimonial.image} 
          alt={industry.testimonial.author}
          class="w-20 h-20 rounded-full mx-auto mb-6 object-cover"
          loading="lazy"
          decoding="async"
          width="80"
          height="80"
        />
        <blockquote class="text-xl lg:text-2xl text-slate-700 dark:text-slate-300 mb-6 italic">
          "{industry.testimonial.quote}"
        </blockquote>
        <div>
          <p class="font-bold text-slate-900 dark:text-white">{industry.testimonial.author}</p>
          <p class="text-slate-500 dark:text-slate-400">{industry.testimonial.title}</p>
          <p class="text-sm text-slate-400">{industry.testimonial.location}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-primary-600 to-primary-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Ready to Fill More Tables?
      </h2>
      <p class="text-lg text-primary-100 mb-8">
        Book a free strategy call and we'll show you exactly how we can help you increase orders and build loyalty.
      </p>
      <a href="/contact" class="inline-flex items-center px-8 py-4 bg-white text-primary-700 font-bold text-lg rounded-xl hover:bg-primary-50 transition-colors duration-200 shadow-xl">
        Book Your Free Strategy Call
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      <a href="/roi-calculator" class="inline-flex items-center px-8 py-4 mt-4 md:mt-0 md:ml-4 border-2 border-white/50 text-white font-bold text-lg rounded-xl hover:bg-white/10 transition-colors duration-200">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>
        Calculate ROI
      </a>
