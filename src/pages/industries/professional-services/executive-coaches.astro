      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="py-16 md:py-24 bg-slate-50">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-br from-rose-50 to-pink-50 p-8 md:p-12 rounded-2xl">
