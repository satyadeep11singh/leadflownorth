<script define:vars={{ searchItems }}>
  // Search functionality
  const searchInput = document.getElementById('industry-search');
  const searchDropdown = document.getElementById('search-dropdown');
  const searchResults = document.getElementById('search-results');
  const industryCards = document.querySelectorAll('.industry-card');
  
  // Accordion functionality
  const accordionTriggers = document.querySelectorAll('.accordion-trigger');
  
  accordionTriggers.forEach(trigger => {
    trigger.addEventListener('click', () => {
      const card = trigger.closest('.industry-card');
      const content = card.querySelector('.accordion-content');
      const icon = trigger.querySelector('.accordion-icon');
      const isExpanded = trigger.getAttribute('aria-expanded') === 'true';
      
      // Close all other accordions
      accordionTriggers.forEach(otherTrigger => {
        if (otherTrigger !== trigger) {
          const otherCard = otherTrigger.closest('.industry-card');
          const otherContent = otherCard.querySelector('.accordion-content');
          const otherIcon = otherTrigger.querySelector('.accordion-icon');
          otherTrigger.setAttribute('aria-expanded', 'false');
          otherContent.classList.add('hidden');
          otherIcon.classList.remove('rotate-180');
        }
      });
      
      // Toggle current accordion
      trigger.setAttribute('aria-expanded', !isExpanded);
      content.classList.toggle('hidden');
      icon.classList.toggle('rotate-180');
      
      // Update URL hash
      if (!isExpanded) {
        history.replaceState(null, '', `#${card.dataset.slug}`);
      } else {
        history.replaceState(null, '', window.location.pathname);
      }
    });
  });
  
  // Open accordion from URL hash on page load
  function openFromHash() {
    const hash = window.location.hash.slice(1);
    if (hash) {
      const targetCard = document.querySelector(`[data-slug="${hash}"]`);
      if (targetCard) {
        const trigger = targetCard.querySelector('.accordion-trigger');
        trigger.click();
        targetCard.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
    }
  }
  
  // Run on page load
  openFromHash();
  
  // Listen for hash changes
  window.addEventListener('hashchange', openFromHash);
  
  // Search functionality
  searchInput.addEventListener('input', (e) => {
    const query = e.target.value.toLowerCase().trim();
    
    if (query.length === 0) {
      searchDropdown.classList.add('hidden');
      // Show all cards
      industryCards.forEach(card => card.classList.remove('hidden'));
      return;
    }
    
    // Filter search items
    const matches = searchItems.filter(item => 
      item.name.toLowerCase().includes(query) ||
      (item.parent && item.parent.toLowerCase().includes(query))
    ).slice(0, 8);
    
    // Filter visible industry cards
    industryCards.forEach(card => {
      const name = card.dataset.name;
      const subs = card.dataset.subs;
      const isMatch = name.includes(query) || subs.includes(query);
      card.classList.toggle('hidden', !isMatch);
    });
    
    if (matches.length > 0) {
      searchResults.innerHTML = matches.map(item => `
        <a href="${item.href}" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors border-b border-slate-100 dark:border-slate-700 last:border-0">
          <span class="text-2xl">${item.icon}</span>
          <div class="flex-1">
            <p class="font-medium text-slate-900 dark:text-white">${item.name}</p>
            ${item.type === 'specialty' ? `<p class="text-xs text-slate-500 dark:text-slate-400">${item.parent}</p>` : ''}
          </div>
          <span class="text-xs px-2 py-1 rounded-full ${item.type === 'industry' ? 'bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300' : 'bg-slate-100 dark:bg-slate-600 text-slate-600 dark:text-slate-300'}">
            ${item.type === 'industry' ? 'Industry' : 'Specialty'}
          </span>
        </a>
      `).join('');
      searchDropdown.classList.remove('hidden');
    } else {
      searchDropdown.classList.add('hidden');
    }
  });
  
  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (!searchInput.contains(e.target) && !searchDropdown.contains(e.target)) {
      searchDropdown.classList.add('hidden');
    }
  });
  
  // Close dropdown on escape
  searchInput.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      searchDropdown.classList.add('hidden');
      searchInput.blur();
    }
  });
</script>
