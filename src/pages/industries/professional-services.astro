---
import Layout from '../../layouts/Layout.astro';
import FAQSection from '../../components/FAQSection.astro';
import { demoIndustryMap } from '../../data/demo-industries';

const demoSlug = 'professional-services';
const demoData = demoIndustryMap[demoSlug];

const industry = {
  name: "Professional Services",
  icon: "ðŸ’¼",
  headline: "Attract Better Clients & Scale Your Practice",
  description: "Build authority, automate client acquisition, and focus on what you do best.",
  stats: [
    { value: "72%", label: "Client conversion" },
    { value: "2.8x", label: "Pipeline growth" },
    { value: "58%", label: "Referral increase" }
  ],
  challenges: [
    "Feast or famine client acquisition cycles",
    "Competing on price instead of value",
    "Time spent on admin instead of client work",
    "Difficulty standing out in a crowded market"
  ],
  solutions: [
    "Authority-building website that positions expertise",
    "Automated lead qualification and nurturing",
    "Client onboarding automation",
    "Referral program and request systems",
    "Thought leadership content strategy",
    "Email sequences that nurture long-term prospects"
  ],
  features: [
    { title: "Authority Positioning", desc: "Website design that establishes credibility and expertise" },
    { title: "Lead Qualification", desc: "Automated systems that filter for ideal clients" },
    { title: "Client Nurturing", desc: "Stay top-of-mind with prospects who aren't ready yet" },
    { title: "Referral Automation", desc: "Systematically generate referrals from happy clients" }
  ],
  testimonial: {
    quote: "Client conversion hit 72% and my pipeline has nearly tripled. The referral automation alone has brought in 15 new clients this quarter.",
    author: "David Singh",
    title: "CPA, Singh & Associates",
    location: "Toronto, ON",
    image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=100&h=100&fit=crop&crop=face"
  },
  subIndustries: [
    { name: "Accountants", href: "/industries/professional-services/accountants", desc: "CPAs, bookkeepers, tax preparers" },
    { name: "Financial Advisors", href: "/industries/professional-services/financial-advisors", desc: "Wealth management, financial planning" },
    { name: "Business Consultants", href: "/industries/professional-services/business-consultants", desc: "Management, strategy, operations" },
    { name: "Executive Coaches", href: "/industries/professional-services/executive-coaches", desc: "Leadership, career, business coaching" },
    { name: "IT Consultants", href: "/industries/professional-services/it-consultants", desc: "Technology consulting, MSPs, IT services" }
  ]
};

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Professional Services Web Design and Marketing",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Lead Flow North"
  },
  "areaServed": ["Ontario", "Alberta", "British Columbia"],
  "description": "Web design and marketing automation for professional service firms in Canada."
};
---

<Layout 
  title={`${industry.name} Web Design & Marketing`}
  description={`${industry.description} Web design and marketing automation for accountants, consultants, and professional services in Canada.`}
  structuredData={schema}
>
  <!-- Hero -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 dark:bg-blue-900/30 rounded-full mb-6">
            <span class="text-2xl">{industry.icon}</span>
            <span class="text-sm font-medium text-blue-700 dark:text-blue-300">{industry.name}</span>
          </div>
          <h1 class="text-4xl sm:text-5xl font-extrabold text-slate-900 dark:text-white mb-6">
            {industry.headline}
          </h1>
          <p class="text-lg text-slate-600 dark:text-slate-300 mb-8">
            {industry.description} We help Canadian professional service firms build authority and attract better clients consistently.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 items-center">
            <a href="https://cal.com/leadflownorth/15min" class="inline-flex items-center justify-center px-6 py-3 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-colors duration-200">
              Book Your Free Discovery Call
            </a>
            <a href="/free-audit" class="text-slate-600 dark:text-slate-400 hover:text-primary-600 dark:hover:text-primary-400 font-medium transition-colors underline">Get Free Audit</a>
            <span class="text-slate-400">|</span>
            <a href="/services" class="text-slate-600 dark:text-slate-400 hover:text-primary-600 dark:hover:text-primary-400 font-medium transition-colors underline">View Pricing</a>
          </div>
        </div>
        <div class="grid grid-cols-3 gap-4">
          {industry.stats.map((stat) => (
            <div class="bg-white dark:bg-slate-800 rounded-2xl p-6 text-center shadow-lg">
              <p class="text-3xl font-extrabold text-blue-600 mb-1">{stat.value}</p>
              <p class="text-sm text-slate-500 dark:text-slate-400">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Sub-Industries -->
  <section class="py-16 lg:py-24 bg-white dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4">
          Specialized for Your Practice Type
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
          We understand the unique challenges of different professional services. Click to learn more about solutions for your specific practice.
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-6">
        {industry.subIndustries.map((sub) => (
          <a href={sub.href} class="group bg-slate-50 dark:bg-slate-800 rounded-xl p-6 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors border border-slate-200 dark:border-slate-700 hover:border-blue-300">
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-2 group-hover:text-blue-600">{sub.name}</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">{sub.desc}</p>
            <span class="inline-flex items-center text-sm font-medium text-blue-600 mt-3 group-hover:underline">
              Learn more â†’
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Challenges -->
  <section class="py-16 lg:py-24 bg-slate-50 dark:bg-slate-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-6">
            We Understand Professional Services
          </h2>
          <ul class="space-y-4">
            {industry.challenges.map((challenge) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span class="text-slate-700 dark:text-slate-300">{challenge}</span>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-6">
            Our Solutions Work
          </h2>
          <ul class="space-y-4">
            {industry.solutions.map((solution) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-accent-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span class="text-slate-700 dark:text-slate-300">{solution}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="py-16 lg:py-24 bg-white dark:bg-slate-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-3xl p-8 md:p-12">
        <div class="flex flex-col md:flex-row gap-6 items-start">
          <img 
            src={industry.testimonial.image} 
            alt={industry.testimonial.author}
            class="w-16 h-16 rounded-full object-cover"
          />
          <div>
            <blockquote class="text-xl md:text-2xl font-medium text-slate-900 dark:text-white mb-4">
              "{industry.testimonial.quote}"
            </blockquote>
            <div>
              <p class="font-semibold text-slate-900 dark:text-white">{industry.testimonial.author}</p>
              <p class="text-slate-600 dark:text-slate-400">{industry.testimonial.title}</p>
              <p class="text-sm text-slate-500 dark:text-slate-500">{industry.testimonial.location}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- FAQ Section -->
  <FAQSection faqs={demoData.faqs} heading={`${industry.name}. Frequently Asked Questions`} />

  <!-- See Your Website Demo CTA -->
  <section class="py-16 lg:py-24 bg-slate-50 dark:bg-slate-800/50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="reveal">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-accent-100 dark:bg-accent-900/30 rounded-full mb-6">
          <span class="text-sm font-medium text-accent-700 dark:text-accent-300">Interactive Demo</span>
        </div>
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4">
          See What Your Website Could Look Like
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-300 mb-8 max-w-2xl mx-auto">
          Enter your business name, phone number, colors, and services , and watch a personalized website preview come to life in seconds.
        </p>
        <a href={`/demos/${demoSlug}`} class="inline-flex items-center px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-bold text-lg rounded-xl transition-colors duration-200 shadow-lg">
          Build Your Free Demo
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
        </a>
        <p class="mt-4 text-sm text-slate-500 dark:text-slate-400">100% free. No signup required. Takes 30 seconds</p>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-blue-600 to-indigo-700">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Ready to Attract Better Clients?
      </h2>
      <p class="text-lg text-blue-100 mb-8">
        Book a free strategy call and we'll show you how to build authority and grow your practice.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="https://cal.com/leadflownorth/15min" class="inline-flex items-center px-8 py-4 bg-white text-blue-700 font-bold text-lg rounded-xl hover:bg-blue-50 transition-colors duration-200 shadow-xl">
          Book Your Free Discovery Call
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href="/free-audit" class="text-white hover:text-blue-100 font-medium transition-colors underline">Get Free Audit</a>
        <span class="text-white/50">|</span>
        <a href="/services" class="text-white hover:text-blue-100 font-medium transition-colors underline">View Pricing</a>
      </div>
