---
import Layout from '../../layouts/Layout.astro';

const industry = {
  name: "Contractors & Trades",
  icon: "ðŸ”¨",
  headline: "Win More Projects & Build Your Reputation",
  description: "Get found by homeowners, win more bids, and build a reputation that generates referrals.",
  stats: [
    { value: "65%", label: "Bid conversion" },
    { value: "2.1x", label: "Project pipeline" },
    { value: "48%", label: "Repeat business" }
  ],
  challenges: [
    "Competing with larger contractors and franchises",
    "Inconsistent lead flow and seasonal slowdowns",
    "Time wasted on unqualified leads and tire-kickers",
    "Building trust before seeing completed work"
  ],
  solutions: [
    "Local SEO to dominate area searches",
    "Portfolio website showcasing best projects",
    "Lead qualification before the first call",
    "Automated estimate follow-up sequences",
    "Review collection and management",
    "Referral automation from past clients"
  ],
  features: [
    { title: "Project Portfolio", desc: "Showcase your best work with before/after galleries" },
    { title: "Lead Qualification", desc: "Filter out tire-kickers before they waste your time" },
    { title: "Estimate Follow-Up", desc: "Automated sequences that close more bids" },
    { title: "Review Generation", desc: "Build the reputation that wins new projects" }
  ],
  testimonial: {
    quote: "Bid conversion jumped to 65% and our pipeline has doubled. The portfolio on our website builds trust before we even meet clients.",
    author: "Marcus Johnson",
    title: "Owner, Johnson Contracting",
    location: "Calgary, AB",
    image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=100&h=100&fit=crop&crop=face"
  },
  subIndustries: [
    { name: "General Contractors", href: "/industries/contractors-trades/general-contractors", desc: "Home renovations, additions, builds" },
    { name: "Painters", href: "/industries/contractors-trades/painters", desc: "Interior, exterior, commercial painting" }
  ]
};

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Contractor Web Design and Marketing",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Lead Flow North"
  },
  "areaServed": ["Ontario", "Alberta", "British Columbia"],
  "description": "Web design and marketing automation for contractors and tradespeople in Canada."
};
---

<Layout 
  title={`${industry.name} Web Design & Marketing`}
  description={`${industry.description} Web design and marketing automation for general contractors and trades in Canada.`}
  structuredData={schema}
>
  <!-- Hero -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-amber-100 dark:bg-amber-900/30 rounded-full mb-6">
            <span class="text-2xl">{industry.icon}</span>
            <span class="text-sm font-medium text-amber-700 dark:text-amber-300">{industry.name}</span>
          </div>
          <h1 class="text-4xl sm:text-5xl font-extrabold text-slate-900 dark:text-white mb-6">
            {industry.headline}
          </h1>
          <p class="text-lg text-slate-600 dark:text-slate-300 mb-8">
            {industry.description} We help Canadian contractors win more projects and build lasting reputations.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-xl transition-colors duration-200">
              Get Your Free Strategy Call
            </a>
            <a href="/case-studies" class="inline-flex items-center justify-center px-6 py-3 border-2 border-slate-300 dark:border-slate-600 hover:border-primary-500 text-slate-700 dark:text-slate-300 font-semibold rounded-xl transition-colors duration-200">
              See Case Studies
            </a>
          </div>
        </div>
        <div class="grid grid-cols-3 gap-4">
          {industry.stats.map((stat) => (
            <div class="bg-white dark:bg-slate-800 rounded-2xl p-6 text-center shadow-lg">
              <p class="text-3xl font-extrabold text-amber-600 mb-1">{stat.value}</p>
              <p class="text-sm text-slate-500 dark:text-slate-400">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Sub-Industries -->
  <section class="py-16 lg:py-24 bg-white dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4">
          Specialized for Your Trade
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
          We understand the unique challenges of different trades. Click to learn more about solutions for your specific business.
        </p>
      </div>
      <div class="grid md:grid-cols-2 gap-6 max-w-2xl mx-auto">
        {industry.subIndustries.map((sub) => (
          <a href={sub.href} class="group bg-slate-50 dark:bg-slate-800 rounded-xl p-6 hover:bg-amber-50 dark:hover:bg-amber-900/20 transition-colors border border-slate-200 dark:border-slate-700 hover:border-amber-300">
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-2 group-hover:text-amber-600">{sub.name}</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">{sub.desc}</p>
            <span class="inline-flex items-center text-sm font-medium text-amber-600 mt-3 group-hover:underline">
              Learn more â†’
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Challenges -->
  <section class="py-16 lg:py-24 bg-slate-50 dark:bg-slate-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-6">
            We Understand Contractor Challenges
          </h2>
          <ul class="space-y-4">
            {industry.challenges.map((challenge) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span class="text-slate-700 dark:text-slate-300">{challenge}</span>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-6">
            Our Solutions Work
          </h2>
          <ul class="space-y-4">
            {industry.solutions.map((solution) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-accent-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span class="text-slate-700 dark:text-slate-300">{solution}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="py-16 lg:py-24 bg-white dark:bg-slate-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-br from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 rounded-3xl p-8 md:p-12">
        <div class="flex flex-col md:flex-row gap-6 items-start">
          <img 
            src={industry.testimonial.image} 
            alt={industry.testimonial.author}
            class="w-16 h-16 rounded-full object-cover"
          />
          <div>
            <blockquote class="text-xl md:text-2xl font-medium text-slate-900 dark:text-white mb-4">
              "{industry.testimonial.quote}"
            </blockquote>
            <div>
              <p class="font-semibold text-slate-900 dark:text-white">{industry.testimonial.author}</p>
              <p class="text-slate-600 dark:text-slate-400">{industry.testimonial.title}</p>
              <p class="text-sm text-slate-500 dark:text-slate-500">{industry.testimonial.location}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-amber-600 to-orange-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Ready to Win More Projects?
      </h2>
      <p class="text-lg text-amber-100 mb-8">
        Book a free strategy call and we'll show you how to build your pipeline and reputation.
      </p>
      <a href="/contact" class="inline-flex items-center px-8 py-4 bg-white text-amber-700 font-bold text-lg rounded-xl hover:bg-amber-50 transition-colors duration-200 shadow-xl">
        Get Your Free Strategy Call
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      <a href="/roi-calculator" class="inline-flex items-center px-8 py-4 mt-4 md:mt-0 md:ml-4 border-2 border-white/50 text-white font-bold text-lg rounded-xl hover:bg-white/10 transition-colors duration-200">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>
        Calculate ROI
      </a>
