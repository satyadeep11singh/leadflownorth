import Layout from '../layouts/Layout.astro';

const pageSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Web Design and Lead Generation",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Lead Flow North"
  },
  "areaServed": ["Ontario", "Alberta"],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Web Design Packages",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Starter Package",
          "description": "Perfect for startups and small service businesses"
        },
        "price": "499",
        "priceCurrency": "CAD"
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Growth Package",
          "description": "For growing businesses ready to scale"
        },
        "price": "999",
        "priceCurrency": "CAD"
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Scale Package",
          "description": "Full-service solution for established businesses"
        },
        "price": "2999",
        "priceCurrency": "CAD"
      }
    ]
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How long does it take to build a website?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Our Basic package launches in 3-4 weeks, Pro in 5-6 weeks, and Enterprise in 10-12 weeks. We provide weekly updates throughout the process."
      }
    },
    {
      "@type": "Question",
      "name": "Do you require long-term contracts?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No! Our Basic and Pro packages are month-to-month. Only Enterprise requires a 6-month commitment due to the extensive customization involved."
      }
    },
    {
      "@type": "Question",
      "name": "What's included in the monthly retainer?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Monthly retainers include hosting, maintenance, security updates, email support, and access to your lead dashboard. Higher tiers include strategy calls and campaign management."
      }
    },
    {
      "@type": "Question",
      "name": "Do you work with businesses outside Ontario and Alberta?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "While we specialize in Ontario and Alberta markets, we do work with Canadian businesses in other provinces. Contact us to discuss your needs."
      }
    }
  ]
};

const packages = [
  {
    name: "Starter",
    tagline: "Perfect for startups",
    setup: 499,
    monthly: 199,
    popular: false,
