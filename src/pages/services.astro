  description="Transparent pricing for web design and lead generation services. No hidden fees. See exactly what you get with our Starter ($499), Growth ($999), and Scale ($2,999) packages."
  structuredData={pageSchema}
>
  <!-- Hero -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
