                  <span class="text-slate-500 dark:text-slate-400">/month</span>
                </div>
              </div>
              
              <a 
                href="/contact" 
                class={`block w-full py-3 px-6 text-center font-semibold rounded-xl transition-all duration-200 mb-8 ${
                  pkg.popular 
                    ? 'bg-primary-500 hover:bg-primary-600 text-white' 
                    : 'bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-900 dark:text-white'
                }`}
              >
                Get Started
              </a>
              
              <div class="space-y-3">
                {pkg.features.map((feature) => (
                  <div class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-accent-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-sm text-slate-600 dark:text-slate-300">{feature}</span>
                  </div>
