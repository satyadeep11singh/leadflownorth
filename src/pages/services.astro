];

const faqs = [
  {
    question: "How long does it take to build a website?",
    answer: "Our Basic package launches in 3-4 weeks, Pro in 5-6 weeks, and Enterprise in 10-12 weeks. We provide weekly updates throughout the process so you always know what's happening."
