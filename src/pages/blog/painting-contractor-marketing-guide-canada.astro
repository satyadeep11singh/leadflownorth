  <article class="py-12 md:py-20">
    <div class="container mx-auto px-4 sm:px-6">
      <!-- Back Link -->
      <div class="max-w-4xl mx-auto mb-8">
        <a href="/industries/contractors-trades/painters" class="inline-flex items-center text-sky-600 hover:text-sky-700 dark:text-sky-300 font-medium">
