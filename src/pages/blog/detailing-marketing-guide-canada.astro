                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>

        </div>
      </div>

      <!-- Related Articles -->
      <div class="max-w-3xl mx-auto mt-12">
        <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-6">Related Articles</h3>
        <div class="grid md:grid-cols-2 gap-6">
          <a href="/blog/detailing-case-study-pristine" class="group block bg-slate-50 rounded-xl p-6 hover:shadow-lg transition">
