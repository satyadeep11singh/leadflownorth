---
import Layout from '../../layouts/Layout.astro';
import { freeToolGuides } from '../../data/free-tool-guides';
import { freeToolBySlug } from '../../data/free-tools';
import { generalPosts, industryContent } from '../../data/blog-posts';

// Get unique industries for filter
const industries = [...new Set(industryContent.map(p => p.industry))];

const toolGuidePosts = Object.values(freeToolGuides).map((guide) => ({
  slug: `how-to-use-${guide.slug}`,
  title: guide.title,
  excerpt: guide.description,
  toolName: freeToolBySlug[guide.slug]?.name || 'Free Tool',
  readTime: guide.readTime
}));
---

<Layout 
  title="Blog" 
  description="Marketing guides, case studies, and strategies for Canadian small businesses. Industry-specific content for legal, medical, fitness, auto services, and more."
>
  <!-- Hero -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-slate-900 dark:text-white mb-6">
        Insights & Resources
      </h1>
      <p class="text-lg sm:text-xl text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
        Marketing guides, case studies, and strategies to help your business grow. Industry-specific content that actually works.
      </p>
    </div>
  </section>

  <!-- General Posts -->
  <section class="py-16 lg:py-20 bg-white dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-8">Featured Articles</h2>
      <div class="grid md:grid-cols-3 gap-8">
        {generalPosts.map((post) => (
          <article class="bg-slate-50 dark:bg-slate-800 rounded-xl p-6 hover:shadow-lg transition-shadow">
            <span class="inline-block px-3 py-1 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 text-xs font-medium rounded-full mb-4">
              {post.category}
            </span>
            <a href={`/blog/${post.slug}`}>
              <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-2 hover:text-primary-600 transition-colors">
                {post.title}
              </h3>
            </a>
            <p class="text-slate-600 dark:text-slate-400 text-sm mb-4">{post.excerpt}</p>
            <span class="text-xs text-slate-500 dark:text-slate-400">{post.date}</span>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Tool Guides -->
  <section class="py-16 lg:py-20 bg-slate-50 dark:bg-slate-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-4">How-To Guides for Free Tools</h2>
      <p class="text-slate-600 dark:text-slate-400 mb-8">
        Step-by-step instructions for each calculator and planner in our free tools library.
      </p>
      <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-5">
        {toolGuidePosts.map((post) => (
          <article class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:shadow-md transition-shadow">
            <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-slate-400 mb-2">{post.toolName}</p>
            <a href={`/blog/${post.slug}`}>
              <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-2 hover:text-primary-600 transition-colors">
                {post.title}
              </h3>
            </a>
            <p class="text-sm text-slate-600 dark:text-slate-300 mb-3">{post.excerpt}</p>
            <p class="text-xs text-slate-500 dark:text-slate-400">{post.readTime}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Industry Content -->
  <section class="py-16 lg:py-20 bg-slate-50 dark:bg-slate-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-4">Industry Marketing Guides & Case Studies</h2>
      <p class="text-slate-600 dark:text-slate-400 mb-8">
        Explore our collection of 100+ industry-specific marketing resources with real Canadian business success stories.
      </p>
      
      {industries.map((industry) => (
        <div class="mb-12">
          <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4 flex items-center">
            <span class="w-8 h-8 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center mr-3 text-sm">
              {industry === "Home Services" && "ğŸ”§"}
              {industry === "Legal" && "âš–ï¸"}
              {industry === "Medical" && "ğŸ¥"}
              {industry === "Fitness" && "ğŸ’ª"}
              {industry === "Auto" && "ğŸš—"}
              {industry === "Salons" && "ğŸ’…"}
              {industry === "Retail" && "ğŸ›’"}
              {industry === "Professional" && "ğŸ’¼"}
              {industry === "Nonprofit" && "ğŸ’š"}
              {industry === "Daycare" && "ğŸ‘¶"}
              {industry === "Contractors" && "ğŸ”¨"}
            </span>
            {industry === "Professional" ? "Professional Services" : 
             industry === "Nonprofit" ? "Nonprofits" : 
             industry === "Salons" ? "Salons & Spas" : 
             industry === "Auto" ? "Auto Services" : 
             industry === "Retail" ? "E-commerce & Retail" : 
             industry}
          </h3>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
            {industryContent.filter(p => p.industry === industry).map((post) => (
              <a 
                href={`/blog/${post.slug}`}
                class={`px-4 py-3 rounded-lg text-sm font-medium transition-colors border ${
                  post.type === "Guide" 
                    ? "bg-white dark:bg-slate-700 text-slate-700 dark:text-slate-300 border-slate-200 dark:border-slate-600 hover:border-primary-300 hover:text-primary-600" 
                    : "bg-green-50 dark:bg-green-900/20 text-green-700 dark:text-green-400 border-green-200 dark:border-green-800 hover:border-green-400"
                }`}
              >
                <span class="text-xs uppercase tracking-wider opacity-60 block mb-1">{post.type}</span>
                {post.title.replace("Case Study: ", "").replace(" Marketing Guide", "").replace(" Canada", "")}
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="py-16 lg:py-24 bg-white dark:bg-slate-900">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-4">
        Get Growth Tips in Your Inbox
      </h2>
      <p class="text-lg text-slate-600 dark:text-slate-300 mb-8">
        Subscribe for weekly tips on growing your small business online. No spam, just practical advice.
      </p>
      <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
        <input 
          type="email" 
          placeholder="Enter your email" 
          required
          class="flex-1 px-4 py-3 rounded-xl border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-900 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
        />
        <button 
          type="submit"
          class="px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-xl transition-colors duration-200"
        >
          Subscribe
        </button>
      </form>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-primary-600 to-primary-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Ready to Put These Tips Into Action?
      </h2>
      <p class="text-lg text-primary-100 mb-8">
        Book a free strategy call and we'll create a custom plan to grow your business online.
      </p>
      <a href="/contact" class="inline-flex items-center px-8 py-4 bg-white dark:bg-slate-900 text-primary-700 font-bold text-lg rounded-xl hover:bg-primary-50 transition-colors duration-200 shadow-xl">
        Get Your Free Strategy Call
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</Layout>
