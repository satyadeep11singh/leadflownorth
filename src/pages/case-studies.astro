    challenge: "Independent shop losing customers to dealership service departments. Great reputation locally, but no way to showcase trust and expertise online.",
    solution: "Developed a trust-first website with transparent pricing, customer video testimonials, easy appointment booking, and automated service reminder emails.",
    results: [
      { metric: "145%", label: "Appointment increase" },
      { metric: "91%", label: "Service recommendation rate" },
      { metric: "$19K", label: "Monthly revenue increase" },
      { metric: "67", label: "Video testimonials" }
    ],
    testimonial: "People tell us they chose us because our website felt honest. In this industry, that trust is everything.",
    testimonialAuthor: "Harpreet Gill, Owner"
  }
