  },
  {
    slug: "northside-fitness-collective",
    client: "Northside Fitness Collective",
    industry: "Fitness & Gyms",
    location: "St. Albert, AB",
    image: "https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=600&h=400&fit=crop",
    challenge: "Boutique gym struggling to compete against GoodLife and Anytime Fitness. Great trainers and community, but no online visibility and a broken class booking system.",
    solution: "Created a community-focused brand website with integrated class scheduling, member referral tracking, and automated onboarding sequences that improve 90-day retention.",
    results: [
      { metric: "92%", label: "Membership growth" },
      { metric: "184", label: "New members in 6 months" },
      { metric: "38%", label: "Referral rate" },
      { metric: "4.9", label: "Google rating" }
    ],
    testimonial: "We finally have a brand that matches who we are. Members are proud to share us now, and the referrals just keep coming.",
    testimonialAuthor: "Taryn Blackwood, Co-Owner"
  },
  {
    slug: "queen-west-eats",
    client: "Queen West Eats",
    industry: "Restaurants",
    location: "Toronto, ON",
    image: "https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=600&h=400&fit=crop",
    challenge: "Three-location restaurant group was paying 30% commission fees to delivery apps. Wanted to build direct ordering to protect margins and own customer relationships.",
    solution: "Built a branded online ordering platform with loyalty rewards, reservation management across all locations, and email campaigns that drive repeat visits.",
    results: [
      { metric: "280%", label: "Direct order increase" },
      { metric: "$34K", label: "Monthly direct revenue" },
      { metric: "3,200", label: "Loyalty members" },
      { metric: "24%", label: "Repeat visit increase" }
    ],
    testimonial: "We cut our delivery app dependency in half. Our regulars order direct now, and we actually make money on those orders.",
    testimonialAuthor: "Daniela Ricci, Operations Director"
  },
  {
    slug: "reliable-auto-centre",
    client: "Reliable Auto Centre",
    industry: "Auto Services",
