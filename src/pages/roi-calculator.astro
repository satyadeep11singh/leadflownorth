<script>
  // ‚îÄ‚îÄ‚îÄ Industry presets ‚îÄ‚îÄ‚îÄ
  const industryPresets = {
    custom:       { avgJobValue: 750,   closeRate: 40, currentConversion: 2, newConversion: 6,  trafficIncrease: 100, source: null },
    plumber:      { avgJobValue: 450,   closeRate: 50, currentConversion: 2, newConversion: 7,  trafficIncrease: 100, source: 'Avg plumbing job $175‚Äì$450 (HomeAdvisor 2024)' },
    hvac:         { avgJobValue: 800,   closeRate: 45, currentConversion: 2, newConversion: 6,  trafficIncrease: 100, source: 'HVAC repairs $150‚Äì$600, installs $2K‚Äì$7K (HomeAdvisor)' },
    electrician:  { avgJobValue: 400,   closeRate: 50, currentConversion: 2, newConversion: 7,  trafficIncrease: 100, source: 'Electrical work $150‚Äì$500 avg (HomeAdvisor)' },
    roofing:      { avgJobValue: 8500,  closeRate: 25, currentConversion: 3, newConversion: 8,  trafficIncrease: 100, source: 'Avg roof replacement $8K‚Äì$15K (HomeAdvisor)' },
    landscaping:  { avgJobValue: 350,   closeRate: 55, currentConversion: 2, newConversion: 6,  trafficIncrease: 100, source: 'Landscaping $200‚Äì$500 avg per visit' },
    dental:       { avgJobValue: 1200,  closeRate: 60, currentConversion: 3, newConversion: 8,  trafficIncrease: 100, source: 'Dental procedures avg $300‚Äì$3,000' },
    chiro:        { avgJobValue: 250,   closeRate: 55, currentConversion: 3, newConversion: 7,  trafficIncrease: 100, source: 'Chiropractic visit $50‚Äì$200, recurring' },
    legal:        { avgJobValue: 3500,  closeRate: 30, currentConversion: 2, newConversion: 6,  trafficIncrease: 100, source: 'Family/personal injury avg $1.5K‚Äì$5K/case' },
    accounting:   { avgJobValue: 1500,  closeRate: 45, currentConversion: 2, newConversion: 5,  trafficIncrease: 100, source: 'Annual accounting + tax prep = ~$1,500+ avg' },
    realestate:   { avgJobValue: 12000, closeRate: 15, currentConversion: 2, newConversion: 5,  trafficIncrease: 100, source: 'Avg commission ~$8K‚Äì$12K net after splits' },
    cleaning:     { avgJobValue: 200,   closeRate: 60, currentConversion: 2, newConversion: 7,  trafficIncrease: 100, source: 'House cleaning $100‚Äì$300/visit, high repeat' },
    auto:         { avgJobValue: 550,   closeRate: 50, currentConversion: 2, newConversion: 6,  trafficIncrease: 100, source: 'Auto repair avg $300‚Äì$800' }
  };

  // ‚îÄ‚îÄ‚îÄ State ‚îÄ‚îÄ‚îÄ
  let selectedIndustry = 'custom';
  let selectedVisitors = 500;

  // ‚îÄ‚îÄ‚îÄ DOM elements ‚îÄ‚îÄ‚îÄ
  const el = {
    avgJobValue:       document.getElementById('avg-job-value') as HTMLInputElement,
    avgJobSlider:      document.getElementById('avg-job-slider') as HTMLInputElement,
    currentVisitors:   document.getElementById('current-visitors') as HTMLInputElement,
    currentConversion: document.getElementById('current-conversion') as HTMLInputElement,
    closeRate:         document.getElementById('close-rate') as HTMLInputElement,
    newConversion:     document.getElementById('new-conversion') as HTMLInputElement,
    trafficIncrease:   document.getElementById('traffic-increase') as HTMLInputElement,
    websiteCost:       document.getElementById('website-cost') as HTMLSelectElement,
    industrySource:    document.getElementById('industry-source')!,
    // Results
    resultLeads:          document.getElementById('result-leads')!,
    resultLeadsIncrease:  document.getElementById('result-leads-increase')!,
    resultRevenue:        document.getElementById('result-revenue')!,
    resultPayback:        document.getElementById('result-payback')!,
    resultRoi:            document.getElementById('result-roi')!,
    resultRoiDollars:     document.getElementById('result-roi-dollars')!,
    resultAnnual:         document.getElementById('result-annual')!,
    resultInvestment:     document.getElementById('result-investment')!,
    // Comparison
    compareVisitorsOld:  document.getElementById('compare-visitors-old')!,
    compareVisitorsNew:  document.getElementById('compare-visitors-new')!,
    compareLeadsOld:     document.getElementById('compare-leads-old')!,
    compareLeadsNew:     document.getElementById('compare-leads-new')!,
    compareCustomersOld: document.getElementById('compare-customers-old')!,
    compareCustomersNew: document.getElementById('compare-customers-new')!,
    compareRevenueOld:   document.getElementById('compare-revenue-old')!,
    compareRevenueNew:   document.getElementById('compare-revenue-new')!,
  };

  // ‚îÄ‚îÄ‚îÄ Formatters ‚îÄ‚îÄ‚îÄ
  function fmt$(n: number): string {
    if (n >= 1000000) return '$' + (n / 1000000).toFixed(1) + 'M';
    if (n >= 1000) return '$' + n.toLocaleString('en-CA', { maximumFractionDigits: 0 });
    return '$' + n.toFixed(n < 1 ? 2 : 0);
  }
  function fmtN(n: number): string {
    return Math.round(n).toLocaleString('en-CA');
  }

  // ‚îÄ‚îÄ‚îÄ Core calculation ‚îÄ‚îÄ‚îÄ
  function calculate() {
    const currentVisitors   = parseFloat(el.currentVisitors.value) || 0;
    const currentConversion = parseFloat(el.currentConversion.value) || 0;
    const avgJobValue       = parseFloat(el.avgJobValue.value) || 0;
    const closeRate         = parseFloat(el.closeRate.value) || 0;
    const trafficIncrease   = parseFloat(el.trafficIncrease.value) || 0;
    const newConversion     = parseFloat(el.newConversion.value) || 0;
    const websiteCost       = parseFloat(el.websiteCost.value) || 0;

    // Current state
    const currentLeads     = currentVisitors * (currentConversion / 100);
    const currentCustomers = currentLeads * (closeRate / 100);
    const currentRevenue   = currentCustomers * avgJobValue;

    // New state
    const newVisitors  = currentVisitors * (1 + trafficIncrease / 100);
    const newLeads     = newVisitors * (newConversion / 100);
    const newCustomers = newLeads * (closeRate / 100);
    const newRevenue   = newCustomers * avgJobValue;

    // Differences
    const leadsIncrease   = newLeads - currentLeads;
    const revenueIncrease = newRevenue - currentRevenue;
    const annualRevenueIncrease = revenueIncrease * 12;

    // Investment: amortized website cost over 12 months (no monthly services in simple view)
    const totalYearCost = websiteCost;
    const monthlyCostAmortized = websiteCost / 12;

    // ROI = (gain - cost) / cost
    const roi = totalYearCost > 0 ? ((annualRevenueIncrease - totalYearCost) / totalYearCost) * 100 : 0;
    const roiDollars = totalYearCost > 0 ? annualRevenueIncrease / totalYearCost : 0;

    // Payback: months until website cost recovered by extra monthly revenue
    let payback = 0;
    if (revenueIncrease > 0 && websiteCost > 0) {
      payback = websiteCost / revenueIncrease;
    } else if (websiteCost === 0 && revenueIncrease > 0) {
      payback = 0; // Free ‚Äî immediate ROI
    } else {
      payback = 99;
    }

    // ‚îÄ‚îÄ‚îÄ Update DOM ‚îÄ‚îÄ‚îÄ
    el.resultLeads.textContent = fmtN(newLeads);
    if (leadsIncrease > 0) {
      el.resultLeadsIncrease.textContent = `+${fmtN(leadsIncrease)} more than now`;
    } else {
      el.resultLeadsIncrease.textContent = currentLeads > 0 ? 'same as now' : 'new inquiries';
    }

    el.resultRevenue.textContent = fmt$(revenueIncrease);
    
    if (payback === 0) {
      el.resultPayback.textContent = 'Instant';
    } else if (payback >= 99) {
      el.resultPayback.textContent = '‚Äî';
    } else {
      el.resultPayback.textContent = payback < 1 ? '< 1' : payback.toFixed(1);
    }

    el.resultRoi.textContent = roi > 0 ? `${fmtN(roi)}%` : '‚Äî';
    el.resultRoiDollars.textContent = roiDollars > 0 ? `${fmt$(roiDollars)} back for every $1 spent` : 'Enter values above';

    el.resultAnnual.textContent = fmt$(annualRevenueIncrease);
    el.resultInvestment.textContent = fmt$(websiteCost);

    // Comparison cards
    el.compareVisitorsOld.textContent = fmtN(currentVisitors);
    el.compareVisitorsNew.textContent = fmtN(newVisitors);
    el.compareLeadsOld.textContent = fmtN(currentLeads);
    el.compareLeadsNew.textContent = fmtN(newLeads);
    el.compareCustomersOld.textContent = fmtN(currentCustomers);
    el.compareCustomersNew.textContent = fmtN(newCustomers);
    el.compareRevenueOld.textContent = fmt$(currentRevenue);
    el.compareRevenueNew.textContent = fmt$(newRevenue);
  }

  // ‚îÄ‚îÄ‚îÄ Industry button selection ‚îÄ‚îÄ‚îÄ
  document.querySelectorAll('.industry-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const industry = (btn as HTMLElement).dataset.industry!;
      selectedIndustry = industry;
      
      // Visual toggle
      document.querySelectorAll('.industry-btn').forEach(b => {
        b.classList.remove('border-primary-500', 'bg-primary-50', 'dark:bg-primary-900/20', 'ring-2', 'ring-primary-500/30');
        b.classList.add('border-slate-200', 'dark:border-slate-600');
      });
      btn.classList.remove('border-slate-200', 'dark:border-slate-600');
      btn.classList.add('border-primary-500', 'bg-primary-50', 'dark:bg-primary-900/20', 'ring-2', 'ring-primary-500/30');

      // Apply preset
      const preset = industryPresets[industry as keyof typeof industryPresets];
      if (preset) {
        el.avgJobValue.value = String(preset.avgJobValue);
        el.avgJobSlider.value = String(preset.avgJobValue);
        el.closeRate.value = String(preset.closeRate);
        el.currentConversion.value = String(preset.currentConversion);
        el.newConversion.value = String(preset.newConversion);
        el.trafficIncrease.value = String(preset.trafficIncrease);

        if (preset.source) {
          el.industrySource.textContent = `üìä ${preset.source}`;
          el.industrySource.classList.remove('hidden');
        } else {
          el.industrySource.classList.add('hidden');
        }
      }
      calculate();
    });
  });

  // ‚îÄ‚îÄ‚îÄ Traffic button selection ‚îÄ‚îÄ‚îÄ
  document.querySelectorAll('.traffic-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      selectedVisitors = parseInt((btn as HTMLElement).dataset.visitors!, 10);
      el.currentVisitors.value = String(selectedVisitors);

      // Visual toggle
      document.querySelectorAll('.traffic-btn').forEach(b => {
        b.classList.remove('border-primary-500', 'bg-primary-50', 'dark:bg-primary-900/20', 'ring-2', 'ring-primary-500/30');
        b.classList.add('border-slate-200', 'dark:border-slate-600');
      });
      btn.classList.remove('border-slate-200', 'dark:border-slate-600');
      btn.classList.add('border-primary-500', 'bg-primary-50', 'dark:bg-primary-900/20', 'ring-2', 'ring-primary-500/30');

      calculate();
    });
  });

  // ‚îÄ‚îÄ‚îÄ Job value slider sync ‚îÄ‚îÄ‚îÄ
  el.avgJobSlider.addEventListener('input', () => {
    el.avgJobValue.value = el.avgJobSlider.value;
    calculate();
  });
  el.avgJobValue.addEventListener('input', () => {
    const val = parseInt(el.avgJobValue.value, 10);
    if (val >= 50 && val <= 20000) {
      el.avgJobSlider.value = String(val);
    }
    calculate();
  });

  // ‚îÄ‚îÄ‚îÄ Advanced settings listeners ‚îÄ‚îÄ‚îÄ
  [el.currentVisitors, el.currentConversion, el.closeRate, el.newConversion, el.trafficIncrease].forEach(input => {
    input.addEventListener('input', calculate);
  });
  el.websiteCost.addEventListener('change', calculate);

  // ‚îÄ‚îÄ‚îÄ Initial state ‚îÄ‚îÄ‚îÄ
  // Pre-select "Under 500" traffic button
  const defaultTrafficBtn = document.querySelector('.traffic-btn[data-visitors="300"]');
  if (defaultTrafficBtn) {
    selectedVisitors = 300;
    el.currentVisitors.value = '300';
    defaultTrafficBtn.classList.remove('border-slate-200', 'dark:border-slate-600');
    defaultTrafficBtn.classList.add('border-primary-500', 'bg-primary-50', 'dark:bg-primary-900/20', 'ring-2', 'ring-primary-500/30');
  }

  calculate();
</script>
