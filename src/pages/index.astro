        <div class="hidden sm:block absolute left-0 top-0 bottom-0 w-16 md:w-24 lg:w-32 xl:w-48 bg-gradient-to-r from-white to-transparent dark:from-slate-900 z-10 pointer-events-none"></div>
        <div class="hidden sm:block absolute right-0 top-0 bottom-0 w-16 md:w-24 lg:w-32 xl:w-48 bg-gradient-to-l from-white to-transparent dark:from-slate-900 z-10 pointer-events-none"></div>
        
        <!-- Scrolling Track -->
        <div class="partner-carousel flex items-center">
          <!-- First set of logos -->
          <div class="partner-track flex items-center gap-8 sm:gap-12 lg:gap-20 xl:gap-24 animate-scroll px-4">
            {partnerBadges.map((partner, index) => (
              <div class="flex-shrink-0 flex flex-col items-center gap-2 min-w-[100px] sm:min-w-[140px] lg:min-w-[160px]">
                <div class="h-12 lg:h-14 w-auto flex items-center justify-center hover:scale-105 transition-transform duration-300">
                  <img 
                    src={partner.logo} 
                    alt={partner.alt} 
                    class="h-10 lg:h-12 w-auto max-w-[100px] sm:max-w-[120px] lg:max-w-[140px] object-contain"
                    loading={index < 4 ? "eager" : "lazy"}
                    fetchpriority={index === 0 ? "high" : undefined}
                    decoding={index < 4 ? "sync" : "async"}
                    width="140"
                    height="48"
                  />
                </div>
                <span class="text-xs text-slate-700 dark:text-slate-300 text-center whitespace-nowrap font-medium">{partner.name}</span>
              </div>
            ))}
