          <!-- Duplicate set for seamless loop -->
          <div class="partner-track flex items-center gap-8 sm:gap-12 lg:gap-20 xl:gap-24 animate-scroll px-4" aria-hidden="true">
            {partnerBadges.map((partner) => (
              <div class="flex-shrink-0 flex flex-col items-center gap-2 min-w-[100px] sm:min-w-[140px] lg:min-w-[160px]">
