  <!-- ============================================ -->
  <!-- 1. HERO ‚Äî Hook + Primary CTA                -->
  <!-- ============================================ -->
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800 py-16 lg:py-24">
    <!-- Background decoration -->
    <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
