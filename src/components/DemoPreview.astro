---
import type { IndustryDemo } from '../data/demo-industries';

interface Props {
  industry: IndustryDemo;
}

const { industry } = Astro.props;
const { defaults, services, preview } = industry;
---

<!-- Browser Chrome Wrapper — @container enables container queries for responsive device preview -->
<div class="@container bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 shadow-xl overflow-hidden flex flex-col h-full">
  <!-- Browser Top Bar -->
  <div class="flex items-center gap-3 px-4 py-3 bg-slate-100 dark:bg-slate-750 border-b border-slate-200 dark:border-slate-700">
    <div class="flex gap-1.5">
      <div class="w-3 h-3 rounded-full bg-red-400"></div>
      <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
      <div class="w-3 h-3 rounded-full bg-green-400"></div>
    </div>
    <div class="flex-1 flex items-center bg-white dark:bg-slate-700 rounded-lg px-3 py-1.5 text-xs text-slate-400 dark:text-slate-500 font-mono">
      <svg class="w-3 h-3 mr-1.5 text-green-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/></svg>
      <span data-demo="url">www.<span data-demo="url-name">{defaults.businessName.toLowerCase().replace(/[^a-z0-9]+/g, '')}</span>.ca</span>
    </div>
  </div>

  <!-- Preview Content Area -->
  <div
    id="demo-preview"
    class="demo-preview-container overflow-y-auto flex-1"
    style={`--demo-primary: ${defaults.primaryColor}; --demo-accent: ${defaults.accentColor}; --demo-primary-light: ${defaults.primaryColor}20; min-height: 600px;`}
  >
    <!-- ═══════════════ NAVIGATION BAR ═══════════════ -->
    <nav class="flex items-center justify-between px-4 @xl:px-6 py-3" style="background-color: var(--demo-primary);">
      <div class="flex items-center gap-2">
        <div class="w-8 h-8 rounded-lg flex items-center justify-center text-white font-bold text-sm" style="background-color: var(--demo-accent);">
          <span data-demo="logo-letter">{defaults.businessName.charAt(0)}</span>
        </div>
        <span data-demo="nav-business-name" class="text-white font-bold text-sm @xl:text-base">{defaults.businessName}</span>
      </div>
      <div class="hidden @xl:flex items-center gap-4 text-white/80 text-xs">
        <span>Home</span>
        <span>Services</span>
        <span>About</span>
        <span>Contact</span>
      </div>
      <a class="text-white text-xs font-medium flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
        <span data-demo="nav-phone">{defaults.phone}</span>
      </a>
    </nav>

    <!-- ═══════════════ HERO SECTION ═══════════════ -->
    <section class="relative py-12 @xl:py-16 px-4 @xl:px-6 text-center" style={`background: linear-gradient(135deg, var(--demo-primary), ${defaults.primaryColor}dd);`}>
      <div class="absolute inset-0 opacity-10" style={`background-image: url('${preview.heroImage}'); background-size: cover; background-position: center;`}></div>
      <div class="relative z-10 max-w-2xl mx-auto">
        <h1 data-demo="hero-business-name" class="text-2xl @xl:text-3xl @4xl:text-4xl font-extrabold text-white mb-3">{defaults.businessName}</h1>
        <p data-demo="hero-tagline" class="text-base @xl:text-lg text-white/90 mb-6">{defaults.tagline}</p>
        <div class="flex flex-col @xl:flex-row gap-3 justify-center">
          <button class="px-6 py-2.5 rounded-lg font-semibold text-sm transition-colors" style="background-color: var(--demo-accent); color: white;">
            Get a Free Quote
          </button>
          <button class="px-6 py-2.5 rounded-lg font-semibold text-sm border-2 border-white/50 text-white hover:bg-white/10 transition-colors">
            <span data-demo="hero-phone">{defaults.phone}</span>
          </button>
        </div>
      </div>
    </section>

    <!-- ═══════════════ SERVICES SECTION ═══════════════ -->
    <section class="py-10 px-4 @xl:px-6 bg-white">
      <h2 class="text-xl font-bold text-center mb-6" style="color: var(--demo-primary);">Our Services</h2>
      <div id="demo-services-grid" class="grid grid-cols-2 @xl:grid-cols-3 @4xl:grid-cols-4 gap-3">
        {services.map((service, i) => (
          <div
            data-service={service}
            data-service-index={i}
            class="demo-service-card flex flex-col items-center p-3 rounded-xl border border-slate-100 text-center transition-all duration-200 hover:shadow-md"
            style="border-color: var(--demo-primary-light);"
          >
            <div class="w-10 h-10 rounded-full flex items-center justify-center mb-2 text-white text-sm font-bold" style="background-color: var(--demo-accent);">
              {service.charAt(0)}
            </div>
            <span class="text-xs @xl:text-sm font-medium text-slate-700">{service}</span>
          </div>
        ))}
      </div>
    </section>

    <!-- ═══════════════ INDUSTRY-SPECIFIC SECTION ═══════════════ -->
    {preview.uniqueSection && (
      <section class="py-10 px-4 @xl:px-6" style="background-color: var(--demo-primary-light);">
        <h2 class="text-xl font-bold text-center mb-6" style="color: var(--demo-primary);">{preview.uniqueSection.title}</h2>
        <div class="grid grid-cols-1 @xl:grid-cols-2 gap-3 max-w-2xl mx-auto">
          {preview.uniqueSection.items.map((item) => (
            <div class="flex items-center gap-3 bg-white rounded-lg p-3 shadow-sm">
              <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: var(--demo-accent);">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              </div>
              <span class="text-sm font-medium text-slate-700">{item}</span>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- ═══════════════ ABOUT / TRUST SECTION ═══════════════ -->
    <section class="py-10 px-4 @xl:px-6 bg-white">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-xl font-bold mb-3" style="color: var(--demo-primary);">
          Why Choose <span data-demo="about-business-name">{defaults.businessName}</span>?
        </h2>
        <p class="text-sm text-slate-600 mb-6">
          Serving <span data-demo="about-location">{defaults.location}</span> and surrounding areas with dedication and professionalism.
        </p>
        <div class="grid grid-cols-3 gap-4">
          <div class="text-center">
            <div class="text-2xl font-extrabold" style="color: var(--demo-accent);">15+</div>
            <div class="text-xs text-slate-500">Years Experience</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-extrabold" style="color: var(--demo-accent);">500+</div>
            <div class="text-xs text-slate-500">Happy Clients</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-extrabold" style="color: var(--demo-accent);">4.9</div>
            <div class="text-xs text-slate-500">Google Rating</div>
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════ TESTIMONIALS SECTION ═══════════════ -->
    <section class="py-10 px-4 @xl:px-6" style="background-color: var(--demo-primary-light);">
      <h2 class="text-xl font-bold text-center mb-6" style="color: var(--demo-primary);">What Our Clients Say</h2>
      <div class="grid grid-cols-1 @xl:grid-cols-2 gap-4 max-w-2xl mx-auto">
        <div class="bg-white rounded-xl p-4 shadow-sm">
          <div class="flex gap-1 mb-2">
            {[1,2,3,4,5].map(() => (
              <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            ))}
          </div>
          <p class="text-sm text-slate-600 italic mb-2">"Absolutely fantastic service. Professional, reliable, and the results speak for themselves. Highly recommended!"</p>
          <p class="text-xs font-medium text-slate-900">— Sarah M., <span data-demo="review-location-1">{defaults.location}</span></p>
        </div>
        <div class="bg-white rounded-xl p-4 shadow-sm">
          <div class="flex gap-1 mb-2">
            {[1,2,3,4,5].map(() => (
              <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            ))}
          </div>
          <p class="text-sm text-slate-600 italic mb-2">"Best decision we made for our business. The team went above and beyond our expectations. We'll be back!"</p>
          <p class="text-xs font-medium text-slate-900">— James T., <span data-demo="review-location-2">{defaults.location}</span></p>
        </div>
      </div>
    </section>

    <!-- ═══════════════ CONTACT SECTION ═══════════════ -->
    <section class="py-10 px-4 @xl:px-6 bg-white">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-xl font-bold text-center mb-6" style="color: var(--demo-primary);">Get in Touch</h2>
        <div class="grid grid-cols-1 @xl:grid-cols-2 gap-6">
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: var(--demo-primary);">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
              </div>
              <span data-demo="contact-phone" class="text-sm text-slate-700">{defaults.phone}</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: var(--demo-primary);">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <span data-demo="contact-email" class="text-sm text-slate-700">{defaults.email}</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: var(--demo-primary);">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
              </div>
              <span data-demo="contact-location" class="text-sm text-slate-700">{defaults.location}</span>
            </div>
          </div>
          <div class="space-y-3">
            <div class="rounded-lg border border-slate-200 p-2">
              <input type="text" placeholder="Your Name" class="w-full px-2 py-1.5 text-xs text-slate-400 bg-slate-50 rounded" disabled />
            </div>
            <div class="rounded-lg border border-slate-200 p-2">
              <input type="text" placeholder="Your Email" class="w-full px-2 py-1.5 text-xs text-slate-400 bg-slate-50 rounded" disabled />
            </div>
            <div class="rounded-lg border border-slate-200 p-2">
              <textarea placeholder="Your Message" rows="2" class="w-full px-2 py-1.5 text-xs text-slate-400 bg-slate-50 rounded resize-none" disabled></textarea>
            </div>
            <button class="w-full py-2 rounded-lg text-white text-sm font-semibold" style="background-color: var(--demo-accent);" disabled>
              Send Message
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════ FOOTER ═══════════════ -->
    <footer class="py-6 px-4 @xl:px-6 text-white text-center" style="background-color: var(--demo-primary);">
      <p data-demo="footer-business-name" class="font-bold text-sm mb-1">{defaults.businessName}</p>
      <p class="text-xs text-white/70">
        <span data-demo="footer-location">{defaults.location}</span> &bull;
        <span data-demo="footer-phone">{defaults.phone}</span> &bull;
        <span data-demo="footer-email">{defaults.email}</span>
      </p>
      <p class="text-xs text-white/50 mt-2">&copy; 2026 <span data-demo="footer-copyright-name">{defaults.businessName}</span>. All rights reserved.</p>
    </footer>
  </div>
</div>
